  },
  "peerDependencies": {
    "react": ">=16",
    "value-enhancer": ">=3 <=4"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "c8": "^7.12.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "jsdom": "^21.0.0",
    "prettier": "^2.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rollup-plugin-exclude-dependencies-from-bundle": "^1.1.22",
    "standard-version": "^9.5.0",
    "typescript": "^4.7.3",
    "value-enhancer": "^4.2.1",
    "vite": "^3.0.9",
    "vitest": "^0.18.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup",
        "@babel/core"
