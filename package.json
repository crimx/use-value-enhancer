{
  "name": "use-value-enhancer",
  "version": "4.1.1",
  "private": false,
  "description": "React hooks for value-enhancer.",
  "license": "MIT",
  "author": "CRIMX <straybugs@gmail.com> (https://github.com/crimx/)",
  "repository": "crimx/use-value-enhancer",
  "keywords": [
    "observable",
